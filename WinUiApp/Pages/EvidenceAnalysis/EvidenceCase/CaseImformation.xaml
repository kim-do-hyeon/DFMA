<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUiApp.Pages.ArtifactsAnalysis.CaseImformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUiApp.Pages.ArtifactsAnalysis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- 상단 타이틀 / 본문 카드 레이아웃 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="36"/>
            <!-- Title 아래 여백 -->
            <RowDefinition Height="*"/>
            <!-- 본문 카드 -->
        </Grid.RowDefinitions>

        <!-- 페이지 좌상단 타이틀 -->
        <TextBlock
            Grid.Row="0"
            Text="케이스 정보"
            FontSize="32"
            FontWeight="SemiBold"
            Margin="40,40,0,0" />

        <!-- 본문 카드 -->
        <Border
            Grid.Row="2"
            Margin="40,0,40,40"
            Padding="24"
            CornerRadius="12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1">

            <ScrollViewer>
                <StackPanel>

                    <!-- 케이스 기본 정보 -->
                    <TextBlock
                        Text="케이스 정보"
                        FontWeight="SemiBold"
                        FontSize="20"
                        Margin="0,0,0,16" />

                    <!-- 케이스 이름 -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock
                            Text="케이스 이름"
                            FontWeight="SemiBold" />
                        <TextBox
                            x:Name="CaseNameTextBox"
                            Margin="0,8,0,0"
                            IsReadOnly="True" />
                    </StackPanel>

                    <!-- 케이스 폴더 경로 + 찾아보기 -->
                    <Grid Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 라벨 -->
                        <TextBlock
                            Grid.Row="0"
                            Text="케이스 폴더 경로"
                            FontWeight="SemiBold" />

                        <!-- 텍스트박스 + 버튼 -->
                        <Grid
                            Grid.Row="1"
                            Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="CaseFolderPathTextBox"
                                IsReadOnly="True"
                                Grid.Column="0" />

                            <Button
                                x:Name="BrowseCaseFolderButton"
                                Grid.Column="1"
                                Content="찾아보기..."
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Click="BrowseCaseFolderButton_Click" />
                        </Grid>
                    </Grid>

                    <!-- 케이스 생성 시간 + 타임존 (한 줄에 반반) -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 케이스 생성 시각 -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock
                                Text="케이스 생성 시간"
                                FontWeight="SemiBold" />
                            <TextBox
                                x:Name="CaseCreateTimeTextBox"
                                Margin="0,8,0,0"
                                IsReadOnly="True" />
                        </StackPanel>

                        <!-- 타임존 + 선택 메뉴 -->
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock
                                Text="표준 시간"
                                FontWeight="SemiBold" />
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 여기 Height 바인딩 추가 -->
                                <TextBox
                                    x:Name="TimezoneTextBox"
                                    IsReadOnly="True"
                                    Grid.Column="0"
                                    Height="{Binding ElementName=CaseCreateTimeTextBox, Path=ActualHeight}" />

                                <!-- 타임존 선택 메뉴: 버튼처럼 보이도록 스타일링 -->
                                <MenuBar
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Height="{Binding ElementName=CaseCreateTimeTextBox, Path=ActualHeight}">
                                    <MenuBar.Resources>
                                        <Style TargetType="MenuBarItem">
                                            <Setter Property="MinWidth" Value="100"/>
                                            <Setter Property="Padding" Value="12,0,12,0"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="Background" Value="{ThemeResource ButtonBackground}"/>
                                            <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}"/>
                                            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </MenuBar.Resources>

                                    <MenuBarItem
                                        x:Name="TimezoneMenuItem"
                                        Title="표준 시간 변경" />
                                </MenuBar>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- 케이스 증거 소스 -->
                    <TextBlock
                        Text="케이스 증거 소스"
                        FontWeight="SemiBold"
                        Margin="0,0,0,12" />

                    <ListView
                        x:Name="EvidenceSourceListView"
                        Margin="0,0,0,8">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="40"
                                        Text="{Binding Id}" />
                                    <TextBlock
                                        Width="120"
                                        Margin="8,0,0,0"
                                        Text="{Binding Type}" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        Text="{Binding Value}"
                                        TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </StackPanel>
            </ScrollViewer>

        </Border>
    </Grid>
</Page>
