<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="WinUiApp.Pages.CaseAnalysisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:WinUiApp.Pages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <NavigationView x:Name="nvSample"
            IsSettingsVisible="False"
            IsBackButtonVisible="Visible"
            IsBackEnabled="True"
            IsPaneToggleButtonVisible="False"
            IsPaneOpen="True"
            SelectionChanged="NavigationView_SelectionChanged"
            BackRequested="NavigationView_BackRequested"
            PaneDisplayMode="Left"
            IsTabStop="False">

            <!-- 왼쪽 상단 헤더 -->
            <NavigationView.PaneHeader>
                <Grid Height="48"
                      VerticalAlignment="Center"
                      Margin="10,10,10,10">
                    <TextBlock Text="증거 준비"
                        FontSize="28"
                        VerticalAlignment="Center"
                        Margin="10" />
                </Grid>
            </NavigationView.PaneHeader>

            <!-- 메뉴 트리 -->
            <NavigationView.MenuItems>

                <!-- 증거 케이스 -->
                <NavigationViewItem Content="증거 케이스"
                        SelectsOnInvoked="False"
                        IsExpanded="True">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE792;" />
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="케이스 생성" Tag="CreateCasePage">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE792;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <!-- 증거 소스 -->
                <NavigationViewItem Content="증거 소스"
                        Tag="EvidenceSource"
                        SelectsOnInvoked="False"
                        IsExpanded="True">
                    <NavigationViewItem.Icon>
                        <!-- 폴더 아이콘 정도로 사용 -->
                        <FontIcon Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="정적 이미지" Tag="StaticAnalysis">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE74E;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="동적 디스크" Tag="DynamicAnalysis">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xEDA2;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="원격 디스크" Tag="RemoteAnalysis">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE839;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <!-- 증거 프로세싱 -->
                <NavigationViewItem Content="증거 프로세싱"
                        Tag="EvidenceProcess"
                        SelectsOnInvoked="False"
                        IsExpanded="True">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9F5;" />
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="아티팩트 프로세싱" Tag="ArtifactsProcess">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xE9F3;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

            </NavigationView.MenuItems>

            <!-- 아래쪽 설정 -->
            <NavigationView.PaneFooter>
                <NavigationViewItem Content="설정"
                    Icon="Setting"
                    Tag="SettingsPage"
                    SelectsOnInvoked="False" />
            </NavigationView.PaneFooter>

            <!-- 오른쪽 실제 컨텐츠 표시 영역 -->
            <Frame x:Name="contentFrame" />

        </NavigationView>
    </Grid>
</Page>
