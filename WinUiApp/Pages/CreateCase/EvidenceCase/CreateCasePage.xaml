<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUiApp.Pages.CaseAnalysis.CreateCasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUiApp.Pages.CaseAnalysis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- 상단 타이틀 / 본문 카드 레이아웃 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="36"/>
            <!-- Title 아래 여백 -->
            <RowDefinition Height="*"/>
            <!-- 본문 카드 -->
        </Grid.RowDefinitions>

        <!-- 페이지 좌상단 타이틀 -->
        <TextBlock
            Grid.Row="0"
            Text="케이스 생성"
            FontSize="32"
            FontWeight="SemiBold"
            Margin="40,40,0,0" />

        <!-- 본문 카드 -->
        <Border
            Grid.Row="2"
            Margin="40,0,40,40"
            Padding="24"
            CornerRadius="12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 케이스 이름 -->
                    <RowDefinition Height="16"/>
                    <!-- 여백 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 케이스 폴더 이름 -->
                    <RowDefinition Height="16"/>
                    <!-- 여백 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 케이스 폴더 경로 + 찾아보기 -->
                    <RowDefinition Height="*"/>
                    <!-- 여유 공간 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 하단 버튼 -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- 폼 본문 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 우측 버튼 -->
                </Grid.ColumnDefinitions>

                <!-- 케이스 이름 -->
                <StackPanel
                    Grid.Row="0"
                    Grid.ColumnSpan="2">
                    <TextBlock
                        Text="케이스 이름"
                        FontWeight="SemiBold" />
                    <TextBox
                        x:Name="CaseNameTextBox"
                        Margin="0,8,0,0"
                        PlaceholderText="케이스 이름을 입력하세요." />
                </StackPanel>

                <!-- 케이스 폴더 이름 -->
                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="2">
                    <TextBlock
                        Text="케이스 폴더 이름"
                        FontWeight="SemiBold" />
                    <TextBox
                        x:Name="CaseFolderNameTextBox"
                        Margin="0,8,0,0" />
                </StackPanel>

                <!-- 케이스 폴더 경로 + 찾아보기 (붙여서 정렬) -->
                <Grid
                    Grid.Row="4"
                    Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 라벨 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 텍스트 + 버튼 -->
                    </Grid.RowDefinitions>

                    <!-- 라벨 -->
                    <TextBlock
                        Grid.Row="0"
                        Text="케이스 폴더 경로"
                        FontWeight="SemiBold" />

                    <!-- 텍스트박스 + 버튼 한 줄 배치 -->
                    <Grid
                        Grid.Row="1"
                        Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="CaseFolderPathTextBox"
                            IsReadOnly="True"
                            Grid.Column="0" />

                        <Button
                            Grid.Column="1"
                            Content="찾아보기..."
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Click="BrowseFolderButton_Click" />
                    </Grid>
                </Grid>

                <!-- 하단 우측 모서리 이동 버튼 -->
                <Button
                    x:Name="GoToEvidenceSourceButton"
                    Grid.Row="6"
                    Grid.Column="1"
                    Content="케이스 생성"
                    Width="160"
                    Height="40"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Right"
                    Click="CreateCase_Button_Click" />

            </Grid>
        </Border>
    </Grid>
</Page>
