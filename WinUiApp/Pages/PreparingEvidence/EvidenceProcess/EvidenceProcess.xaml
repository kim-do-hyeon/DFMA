<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUiApp.Pages.CaseAnalysis.EvidenceProcess.EvidenceProcess"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUiApp.Pages.CaseAnalysis.EvidenceProcess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- 상단 타이틀 / 본문 카드 레이아웃 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 페이지 타이틀 -->
        <TextBlock Grid.Row="0"
            Text="아티팩트 프로세싱"
            FontSize="32"
            FontWeight="SemiBold"
            Margin="40,40,0,0" />

        <!-- 본문 카드 -->
        <Border Grid.Row="2"
                Margin="40,0,40,40"
                Padding="24"
                CornerRadius="12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- 스크롤 영역 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 하단 버튼 -->
                </Grid.RowDefinitions>

                <!-- 스크롤 영역 -->
                <ScrollViewer Grid.Row="0">
                    <StackPanel>

                        <!-- MAIN TITLE -->
                        <TextBlock Text="분석 항목 선택"
                            FontWeight="SemiBold"
                            FontSize="20"
                            Margin="0,0,0,16" />

                        <!-- 아티팩트 분석 -->
                        <StackPanel Margin="0,0,0,24">
                            <CheckBox x:Name="ArtifactAllCheckBox"
                                Content="아티팩트 분석 전체 선택"
                                IsThreeState="True"
                                Checked="SelectAllArtifact_Checked"
                                Unchecked="SelectAllArtifact_Unchecked"
                                Indeterminate="SelectAllArtifact_Indeterminate" />

                            <CheckBox x:Name="Artifact_EventLog"
                                Content="이벤트 로그"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_Prefetch"
                                Content="프리패치"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_JumpList"
                                Content="점프 목록"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_LinkFile"
                                Content="링크파일"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_PowerShellHistory"
                                Content="쉘 히스토리"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_NotificationCenter"
                                Content="알림 센터"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_MRU"
                                Content="MRU"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_ShellBag"
                                Content="ShellBag"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_SRUM"
                                Content="SRUM"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />

                            <CheckBox x:Name="Artifact_AmCache"
                                Content="AmCache"
                                Margin="24,0,0,0"
                                Checked="ArtifactOption_Checked"
                                Unchecked="ArtifactOption_Unchecked" />
                        </StackPanel>

                        <!-- 브라우저 분석 -->
                        <StackPanel Margin="0,0,0,24">
                            <CheckBox x:Name="BrowserAllCheckBox"
                                Content="브라우저 분석 전체 선택"
                                IsThreeState="True"
                                Checked="SelectAllBrowser_Checked"
                                Unchecked="SelectAllBrowser_Unchecked"
                                Indeterminate="SelectAllBrowser_Indeterminate"/>

                            <CheckBox x:Name="Browser_Search"
                                Content="검색 기록"
                                Margin="24,0,0,0"
                                Checked="BrowserOption_Checked"
                                Unchecked="BrowserOption_Unchecked"/>

                            <CheckBox x:Name="Browser_Visit"
                                Content="방문 기록"
                                Margin="24,0,0,0"
                                Checked="BrowserOption_Checked"
                                Unchecked="BrowserOption_Unchecked"/>

                            <CheckBox x:Name="Browser_Download"
                                Content="다운로드 기록"
                                Margin="24,0,0,0"
                                Checked="BrowserOption_Checked"
                                Unchecked="BrowserOption_Unchecked"/>

                            <CheckBox x:Name="Browser_Cache"
                                Content="캐시 기록"
                                Margin="24,0,0,0"
                                Checked="BrowserOption_Checked"
                                Unchecked="BrowserOption_Unchecked"/>

                            <CheckBox x:Name="Browser_Cookie"
                                Content="쿠키 기록"
                                Margin="24,0,0,0"
                                Checked="BrowserOption_Checked"
                                Unchecked="BrowserOption_Unchecked"/>
                        </StackPanel>

                        <!-- 커뮤니케이션 분석 -->
                        <StackPanel Margin="0,0,0,24">
                            <CheckBox x:Name="CommAllCheckBox"
                                Content="커뮤니케이션 분석 전체 선택"
                                IsThreeState="True"
                                Checked="SelectAllComm_Checked"
                                Unchecked="SelectAllComm_Unchecked"
                                Indeterminate="SelectAllComm_Indeterminate"/>

                            <CheckBox x:Name="Comm_Email"
                                Content="이메일"
                                Margin="24,0,0,0"
                                Checked="CommOption_Checked"
                                Unchecked="CommOption_Unchecked"/>

                            <CheckBox x:Name="Comm_Message"
                                Content="메신저"
                                Margin="24,0,0,0"
                                Checked="CommOption_Checked"
                                Unchecked="CommOption_Unchecked"/>

                            <CheckBox x:Name="Comm_Cloud"
                                Content="클라우드"
                                Margin="24,0,0,0"
                                Checked="CommOption_Checked"
                                Unchecked="CommOption_Unchecked"/>
                        </StackPanel>

                        <!-- 타임라인 분석 -->
                        <StackPanel>
                            <CheckBox x:Name="TimelineAllCheckBox"
                                Content="타임라인 분석 전체 선택"
                                IsThreeState="True"
                                Checked="SelectAllTimeline_Checked"
                                Unchecked="SelectAllTimeline_Unchecked"
                                Indeterminate="SelectAllTimeline_Indeterminate"/>

                            <CheckBox x:Name="Timeline_Main"
                                Content="타임라인"
                                Margin="24,0,0,0"
                                Checked="TimelineOption_Checked"
                                Unchecked="TimelineOption_Unchecked" />
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <!-- 하단 오른쪽 버튼 -->
                <Button
                    Grid.Row="1"
                    Content="증거 분석"
                    x:Name="EvidenceAnalyzeButton"
                    Width="160"
                    Height="40"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"
                    Click="EvidenceAnalyzeButton_Click" />
            </Grid>

        </Border>

    </Grid>
</Page>
