<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUiApp.Pages.CaseAnalysis.EvidenceSourcePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUiApp.Pages.CaseAnalysis"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <!-- 상단 타이틀 / 본문 카드 레이아웃 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="36"/>
            <!-- Title 아래 여백 -->
            <RowDefinition Height="*"/>
            <!-- 본문 카드 -->
        </Grid.RowDefinitions>

        <!-- 페이지 좌상단 타이틀 -->
        <TextBlock
            Grid.Row="0"
            Text="증거 소스"
            FontSize="32"
            FontWeight="SemiBold"
            Margin="40,40,0,0" />

        <!-- 본문 카드 -->
        <Border
            Grid.Row="2"
            Margin="40,0,40,40"
            Padding="24"
            CornerRadius="12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1">

            <StackPanel Spacing="16">

                <TextBlock
                    Text="분석할 증거 유형을 선택하세요."
                    Opacity="0.8"
                    FontSize="14" />

                <!-- 세 개의 네모 버튼 -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 정적 이미지 -->
                    <Button
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Height="96"
                        HorizontalAlignment="Stretch"
                        Click="StaticImageButton_Click">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="8">
                            <FontIcon Glyph="&#xE74E;" FontSize="26" />
                            <TextBlock Text="정적 이미지" />
                        </StackPanel>
                    </Button>

                    <!-- 동적 디스크 -->
                    <Button
                        Grid.Column="1"
                        Margin="4,0"
                        Height="96"
                        HorizontalAlignment="Stretch"
                        Click="DynamicDiskButton_Click">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="8">
                            <FontIcon Glyph="&#xEDA2;" FontSize="26" />
                            <TextBlock Text="동적 디스크" />
                        </StackPanel>
                    </Button>

                    <!-- 원격 디스크 -->
                    <Button
                        Grid.Column="2"
                        Margin="8,0,0,0"
                        Height="96"
                        HorizontalAlignment="Stretch"
                        Click="RemoteDiskButton_Click">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="8">
                            <FontIcon Glyph="&#xE839;" FontSize="26" />
                            <TextBlock Text="원격 디스크" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
